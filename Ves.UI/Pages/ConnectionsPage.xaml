<Page x:Class="Ves.UI.Pages.ConnectionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignWidth="900"
      d:DesignHeight="680">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Conexiones" Style="{StaticResource TitleText}" />
            <TextBlock Text="Estado de las cadenas de conexión definidas en appsettings.json"
                       Foreground="{StaticResource MutedTextBrush}"
                       Margin="0,4,0,16" />
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Diagnóstico"
                               Style="{StaticResource SectionHeaderText}" />
                    <TextBlock x:Name="DiagnosticsText"
                               TextWrapping="Wrap"
                               Foreground="{StaticResource MutedTextBrush}"
                               Margin="0,6,0,0" />
                </StackPanel>
            </Border>

            <ItemsControl x:Name="ConnectionList" Margin="0,24,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16" />
                                <TextBlock Text="Cadena de conexión" Margin="0,6,0,4" FontWeight="SemiBold" />
                                <TextBox Text="{Binding ConnectionString}"
                                         IsReadOnly="True"
                                         Margin="0,0,0,6"
                                         TextWrapping="Wrap"
                                         Background="#FFF7F8FF"
                                         BorderThickness="0"
                                         Padding="10" />
                                <Button Content="Copiar"
                                        Width="120"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="OnCopyClicked" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Page>
