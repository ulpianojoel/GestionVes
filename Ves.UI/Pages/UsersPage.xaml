<Page x:Class="Ves.UI.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignWidth="900"
      d:DesignHeight="680">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock Text="Gestión de usuarios" Style="{StaticResource TitleText}" />
            <TextBlock Text="Controlá el estado y los permisos del equipo"
                       Foreground="{StaticResource MutedTextBrush}"
                       Margin="0,4,0,16" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Style="{StaticResource CardStyle}" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="SearchTextBox"
                                 Width="220"
                                 Margin="0,0,12,0"
                                 Padding="10,6"
                                 ToolTip="Buscar por usuario o correo" />
                        <Button Content="Buscar"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="100"
                                Click="OnSearchClicked" />
                        <Button Content="Limpiar"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Width="100"
                                Margin="12,0,0,0"
                                Click="OnClearFilterClicked" />
                    </StackPanel>

                    <DataGrid x:Name="UsersGrid"
                              Grid.Row="1"
                              Margin="0,16,0,0"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionChanged="OnUserSelected"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Usuario" Binding="{Binding Username}" Width="*" />
                            <DataGridTextColumn Header="Nombre" Binding="{Binding DisplayName}" Width="2*" />
                            <DataGridTextColumn Header="Rol" Binding="{Binding Role}" Width="*" />
                            <DataGridTextColumn Header="Estado" Binding="{Binding Status}" Width="*" />
                            <DataGridTextColumn Header="Último acceso" Binding="{Binding LastAccessUtc, StringFormat=dd/MM/yyyy HH:mm}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <Border Style="{StaticResource CardStyle}" Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="Detalle seleccionado" Style="{StaticResource SectionHeaderText}" />
                    <TextBlock Text="Seleccioná un usuario para ver más información."
                               Foreground="{StaticResource MutedTextBrush}"
                               Margin="0,4,0,12" />
                    <StackPanel x:Name="DetailPanel" Visibility="Collapsed">
                        <TextBlock x:Name="DetailName" FontSize="18" FontWeight="SemiBold" />
                        <TextBlock x:Name="DetailEmail" Foreground="{StaticResource MutedTextBrush}" />
                        <TextBlock x:Name="DetailRole" Margin="0,12,0,0" />
                        <TextBlock x:Name="DetailStatus" />
                        <TextBlock x:Name="DetailLastAccess" Margin="0,12,0,0" />
                        <Button Content="Restablecer contraseña"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Width="180"
                                Margin="0,20,0,0"
                                Click="OnResetPasswordClicked" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
