<Page x:Class="Ves.UI.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignWidth="900"
      d:DesignHeight="680">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,0,40">
            <TextBlock Text="Panel principal"
                       Style="{StaticResource TitleText}" />
            <TextBlock Text="Indicadores y pendientes del día"
                       Foreground="{StaticResource MutedTextBrush}"
                       Margin="0,4,0,0" />

            <Grid Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Usuarios activos" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding Summary.ActiveUsers}" FontSize="34" FontWeight="Bold" />
                        <TextBlock Text="Usuarios habilitados en el sistema"
                                   Foreground="{StaticResource MutedTextBrush}" />
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}" Grid.Column="1" Margin="16,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Usuarios inactivos" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding Summary.InactiveUsers}" FontSize="34" FontWeight="Bold" />
                        <TextBlock Text="En seguimiento o suspendidos"
                                   Foreground="{StaticResource MutedTextBrush}" />
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}" Grid.Row="1" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Operaciones pendientes" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding Summary.PendingOperations}" FontSize="34" FontWeight="Bold" />
                        <TextBlock Text="Tareas asignadas sin cerrar"
                                   Foreground="{StaticResource MutedTextBrush}" />
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}" Grid.Column="1" Grid.Row="1" Margin="16,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Alertas" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding Summary.Alerts}" FontSize="34" FontWeight="Bold" />
                        <TextBlock Text="Solicitudes con bloqueo"
                                   Foreground="{StaticResource MutedTextBrush}" />
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Margin="0,32,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Flujo de operaciones" Style="{StaticResource SectionHeaderText}" />
                    <ItemsControl ItemsSource="{Binding Operations}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Description}"
                                                   Margin="0,4,0,0"
                                                   Foreground="{StaticResource MutedTextBrush}" />
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <Border Background="#142D5BFF" CornerRadius="12" Padding="10,4">
                                                <TextBlock Text="{Binding Status}" Foreground="{StaticResource PrimaryBrush}" FontWeight="SemiBold" />
                                            </Border>
                                            <TextBlock Text="{Binding DueLabel}"
                                                       Margin="12,0,0,0"
                                                       Foreground="{StaticResource MutedTextBrush}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="24,0,0,0">
                    <TextBlock Text="Notificaciones"
                               Style="{StaticResource SectionHeaderText}" />
                    <ItemsControl ItemsSource="{Binding Notifications}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Detail}" Foreground="{StaticResource MutedTextBrush}" Margin="0,4,0,0" />
                                        <TextBlock Text="{Binding RelativeTime}" FontSize="12" Foreground="#FF9CA3AF" Margin="0,8,0,0" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Border Style="{StaticResource CardStyle}" Margin="0,24,0,0">
                        <StackPanel>
                            <TextBlock Text="Última sincronización" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding Summary.LastSyncLabel}" FontSize="20" FontWeight="Bold" />
                            <TextBlock Text="Conexiones verificadas"
                                       Foreground="{StaticResource MutedTextBrush}" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
