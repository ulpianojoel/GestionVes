<Window x:Class="Ves.UI.Views.PasswordRecoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recuperar contraseña"
        Width="420"
        Height="280"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FFEFF3FF">
    <Border Style="{StaticResource CardStyle}" Margin="20">
        <StackPanel>
            <TextBlock Text="¿Olvidaste tu contraseña?"
                       Style="{StaticResource TitleText}" />
            <TextBlock Text="Ingresá tu usuario o correo electrónico registrado y te enviaremos instrucciones."
                       TextWrapping="Wrap"
                       Foreground="{StaticResource MutedTextBrush}" />
            <StackPanel Margin="0,14,0,0">
                <TextBlock Text="Usuario o correo" FontWeight="SemiBold" />
                <TextBox x:Name="IdentifierTextBox"
                         Height="34"
                         Padding="10,6"
                         Margin="0,6,0,0"
                         ToolTip="Usuario o email registrado" />
            </StackPanel>
            <TextBlock x:Name="ResultText"
                       Foreground="{StaticResource MutedTextBrush}"
                       TextWrapping="Wrap"
                       Margin="0,14,0,0"
                       Visibility="Collapsed" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Cancelar"
                        Width="90"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="OnCancelClicked" />
                <Button Content="Enviar"
                        Width="90"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="8,0,0,0"
                        Click="OnSendClicked" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
