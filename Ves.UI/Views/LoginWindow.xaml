<Window x:Class="Ves.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de gestión VES - Acceso"
        Width="960"
        Height="600"
        MinWidth="880"
        MinHeight="520"
        WindowStartupLocation="CenterScreen"
        Background="#FFEFF3FF">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="#FF1B2440">
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Sistema de Gestión VES"
                           Foreground="White"
                           FontSize="36"
                           FontWeight="Bold" />
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center">
                    <TextBlock Text="Monitoreá operaciones, usuarios y alertas en un panel unificado."
                               Foreground="#CCFFFFFF"
                               FontSize="18"
                               TextWrapping="Wrap" />
                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <Border Width="12" Height="12" CornerRadius="6" Background="{StaticResource AccentBrush}" />
                        <TextBlock Text="Validación de clientes en tiempo real" Foreground="#B3FFFFFF" Margin="12,0,0,0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Border Width="12" Height="12" CornerRadius="6" Background="{StaticResource AccentBrush}" />
                        <TextBlock Text="Indicadores clave siempre visibles" Foreground="#B3FFFFFF" Margin="12,0,0,0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Border Width="12" Height="12" CornerRadius="6" Background="{StaticResource AccentBrush}" />
                        <TextBlock Text="Alertas tempranas configurables" Foreground="#B3FFFFFF" Margin="12,0,0,0" />
                    </StackPanel>
                </StackPanel>
                <TextBlock Grid.Row="2"
                           Text="© VES Gestión 2024"
                           Foreground="#80FFFFFF" />
            </Grid>
        </Border>

        <Grid Grid.Column="1" Background="Transparent">
            <Border Style="{StaticResource CardStyle}" Margin="30" VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Bienvenido/a" Style="{StaticResource TitleText}" />
                    <TextBlock Grid.Row="1"
                               Text="Ingresá tus credenciales para comenzar a trabajar."
                               Foreground="{StaticResource MutedTextBrush}"
                               Margin="0,4,0,16" />

                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Usuario" FontWeight="SemiBold" />
                        <TextBox x:Name="UsernameTextBox"
                                 MinWidth="260"
                                 Height="36"
                                 Padding="10,6"
                                 Margin="0,6,0,0"
                                 ToolTip="Ingresar usuario" />
                    </StackPanel>

                    <StackPanel Grid.Row="3" Margin="0,12,0,0">
                        <TextBlock Text="Contraseña" FontWeight="SemiBold" />
                        <PasswordBox x:Name="PasswordBox"
                                     Height="36"
                                     Padding="10,6"
                                     Margin="0,6,0,0"
                                     ToolTip="Ingresar contraseña" />
                    </StackPanel>

                    <TextBlock x:Name="ErrorText"
                               Grid.Row="4"
                               Foreground="Tomato"
                               Margin="0,12,0,0"
                               Visibility="Collapsed" />

                    <StackPanel Grid.Row="5" Margin="0,24,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Recuperar contraseña"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="OnRecoverPasswordClicked" />
                        <Button Content="Ingresar"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="140"
                                Margin="12,0,0,0"
                                Click="OnLoginClicked" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
