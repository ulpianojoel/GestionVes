<Window x:Class="Ves.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de gesti贸n VES"
        Width="1280"
        Height="760"
        MinWidth="1120"
        MinHeight="680"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F7FB">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF1B2440">
            <DockPanel LastChildFill="True" Margin="0,20,0,20">
                <StackPanel DockPanel.Dock="Top" Margin="24,0">
                    <TextBlock Text="VES Gesti贸n"
                               Foreground="White"
                               FontSize="26"
                               FontWeight="Bold" />
                    <TextBlock Text="Control integral de operaciones"
                               Foreground="#80FFFFFF"
                               FontSize="12"
                               Margin="0,8,0,0" />
                    <Border Height="1" Background="#1FFFFFFF" Margin="0,10,0,0" />
                </StackPanel>

                <ListBox x:Name="NavigationList"
                         Margin="12,20,12,12"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         SelectionChanged="OnNavigationChanged">
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="16" />
                            <Setter Property="Margin" Value="0,4" />
                            <Setter Property="FontSize" Value="15" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="container"
                                                Background="Transparent"
                                                CornerRadius="10">
                                            <ContentPresenter Margin="8,4"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="container" Property="Background" Value="#33FFFFFF" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="container" Property="Background" Value="#19FFFFFF" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>

                    <ListBoxItem Content="Panel principal" Tag="Dashboard" IsSelected="True" />
                    <ListBoxItem Content="Gesti贸n de usuarios" Tag="Users" />
                    <ListBoxItem Content="Operaciones" Tag="Operations" />
                    <ListBoxItem Content="Reportes" Tag="Reports" />
                    <ListBoxItem Content="Conexiones" Tag="Connections" />
                </ListBox>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" Padding="24">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.12" />
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock x:Name="GreetingText"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SecondaryBrush}" />
                        <TextBlock Text="Resumen actualizado de tu operaci贸n" Foreground="{StaticResource MutedTextBrush}" />
                    </StackPanel>
                    <Border Grid.Column="1"
                            Background="#191B2440"
                            Padding="12"
                            CornerRadius="12">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="40" Height="40" Fill="{StaticResource PrimaryBrush}" />
                            <StackPanel Margin="12,0,0,0">
                                <TextBlock x:Name="UserNameText" Foreground="White" FontWeight="SemiBold" />
                                <TextBlock x:Name="UserRoleText" Foreground="#B3FFFFFF" FontSize="12" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Frame x:Name="ContentFrame"
                   Grid.Row="1"
                   Margin="24"
                   NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>
